<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:GetStartedApp.ViewModels"
             x:Class="GetStartedApp.Views.TimeLogsView"
             x:DataType="vm:TimeLogsViewModel"
             Background="#F9FAFB">

  <DockPanel>
    <!-- Sidebar -->
    <Border Background="#F1F1F1" Width="200" DockPanel.Dock="Left">
      <StackPanel Margin="20,20,20,10" Spacing="20">
        <TextBlock Text="🕒 TimeWise" FontSize="22" FontWeight="Bold" Foreground="#1F2937" />
        <Button Content="🏠 Dashboard" Background="Transparent" Foreground="#1F2937"
                Command="{Binding Main.ShowBoardCommand}" />
        <Button Content="📁 Projects" Background="Transparent" Foreground="#1F2937"
                Command="{Binding Main.ShowProjectsCommand}" />
        <Button Content="📝 Tasks" Background="Transparent" Foreground="#1F2937"
                Command="{Binding Main.ShowTasksCommand}" />
        <Button Content="⏱ Time Logs" Background="Transparent" Foreground="#3B82F6"
                Command="{Binding Main.ShowTimeLogsCommand}" />
        <Button Content="📊 Reports" Background="Transparent" Foreground="#1F2937"
                Command="{Binding Main.ShowReportsCommand}" />
        <Button Content="← Log Out" Background="Transparent" Foreground="#EF4444"
                Command="{Binding Main.LogOutCommand}" HorizontalAlignment="Left" Margin="0,40,0,0" />
      </StackPanel>
    </Border>

    <!-- Main Content -->
    <StackPanel Margin="24" Spacing="16">
      <TextBlock Text="⏱ Time Logs" FontSize="28" FontWeight="Bold" Foreground="#111827" />
      <TextBlock Text="This is the Time Logs view" FontSize="16" Foreground="#374151" />
    </StackPanel>
  </DockPanel>
</UserControl>